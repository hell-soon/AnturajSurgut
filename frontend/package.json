{
  "name": "nuxt-app",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=8.x"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.15.0",
    "@mdi/font": "^7.4.47",
    "@nuxt/image": "^1.5.0",
    "@pinia/nuxt": "^0.5.1",
    "@unocss/eslint-plugin": "^0.59.4",
    "@yandex/ymaps3-types": "^0.0.24",
    "eslint": "^8.56.0",
    "eslint-plugin-format": "^0.1.1",
    "nuxt": "^3.11.2",
    "pinia": "^2.1.7",
    "sass": "^1.75.0",
    "simple-git-hooks": "^2.11.1",
    "swiper": "^11.1.1",
    "typescript": "^5.4.5",
    "vite-plugin-vuetify": "^2.0.3",
    "vue-tsc": "^2.0.13",
    "vue-yandex-maps": "^2.1.2",
    "vuetify": "^3.5.16"
  },
  "simple-git-hooks": {
    "pre-commit": "cd frontend && npx lint-staged",
    "post-commit": "git status"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
